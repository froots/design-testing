@objects
    header              .header
        title           .header__title
        menuButton      .button--menu
    layoutContainer     .layout-container
    main                .main
        content         .content-container
            title       h1
            para-*      p
    nav                 .nav
        list            .nav__list
        item-*          .nav__item

@set
    rem                 16px
    commonMargin        16px

= Main section =
    @on *
        header:
            width 100% of viewport/width
            inside viewport 0px top, 0px left, 0px right

        header.title:
            inside header ${commonMargin} left

        layoutContainer:
            width 100% of viewport/width
            inside viewport 0px left, 0px right

    @on narrow_screen
        # The menu button is displayed on small screens
        header.menuButton:
            inside header ${commonMargin} right
            aligned horizontally centered header.title

        # We hide the nav menu initially for small screens
        nav:
            absent

        main.content.title:
            below header ${commonMargin}
            inside viewport ${commonMargin} left, ${commonMargin} right

        main.content.para-1:
            below main.content.title ${commonMargin}
