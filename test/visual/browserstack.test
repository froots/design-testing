@@ set
    gridLogin ${browserStackUser}:${browserStackKey}
    gridUrl http://${gridLogin}@hub.browserstack.com/wd/hub

@@ table desktopBrowsers
    | browser   | gridArgs                                                                                                                   |
    | Firefox   | --dc.browser "Firefox" --dc.browser_version "46" --dc.os "WINDOWS" --dc.os_version "10" --dc.browserstack.debug true       |
    | Chrome    | --dc.browser "Chrome" --dc.browser_version "50" --dc.os "WINDOWS" --dc.os_version "10" --dc.browserstack.debug true        |
    | IE11      | --dc.browser "IE" --dc.browser_version "11" --dc.os "WINDOWS" --dc.os_version "10" --dc.browserstack.debug true            |
    | Safari    | --dc.browser "Safari" --dc.browser_version "9.1" --dc.os "OS X" --dc.os_version "El Capitan" --dc.browserstack.debug true  |

@@ table mobileBrowsers
    | browser     | gridArgs                                                                                                |
    | iPhone 6    | --dc.device "iPhone 6" --dc.os "ios" --dc.browser "iPhone" --dc.deviceOrientation "portrait"            |
    | Android 4.4 | --dc.device "Google Nexus 5" --dc.os "android" --dc.browser "Android" --dc.deviceOrientation "portrait" |

@@ table tabletBrowsers
    | browser     | gridArgs                                                                                                                                |
    | iPad Air    | --dc.browserName "iphone" --dc.version "9.1" --dc.deviceName "iPad Retina" --dc.platform "OS X 10.10" --dc.deviceOrientation "portrait" |

@@ table viewports
    | viewportName | tags          | size     |
    | narrow       | narrow_screen | 540x960  |
    | wide         | wide_screen   | 1280x960 |

@@ disabled
@@ parameterized using desktopBrowsers
@@ parameterized using viewports
Search component on ${browser} with ${viewportName} screen
    selenium grid ${gridUrl} --page ${baseUrl}styleguide/search.html ${gridArgs} --size ${size} --resolution 1600x1200
        check test/visual/specs/search.gspec --include "${tags},all"

@@ parameterized using mobileBrowsers
Search component on ${browser}
    selenium grid ${gridUrl} --page ${baseUrl}styleguide/search.html ${gridArgs}
        check test/visual/specs/search.gspec --include "narrow_screen"
