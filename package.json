{
  "name": "design-testing",
  "version": "0.1.0",
  "description": "",
  "engines" : {
    "node" : ">=4.0.0"
  },
  "scripts": {
    "deploy:surge": "surge dist/ designtesting.surge.sh",
    "dump": "galen dump test/visual/specs/search.gspec --url 'http://localhost:8000/dist/styleguide/search.html' --size '540x960' --export 'test/visual/dumps/search-dump'",
    "postdump": "open test/visual/dumps/search-dump/page.html",
    "galen:all": "galen test test/visual/suite.test --htmlreport test/visual/report -DbaseUrl=http://localhost:8000/",
    "galen:browserstack": "galen test test/visual/browserstack.test --htmlreport test/visual/report -DbaseUrl=http://designtesting.surge.sh/ -DbrowserStackKey=$BROWSERSTACK_KEY -DbrowserStackUser=$BROWSERSTACK_USER",
    "galen:dist": "galen test test/visual/suite.test --htmlreport test/visual/report -DbaseUrl=http://designtesting.surge.sh/",
    "galen:spec": "galen check test/visual/specs/search.gspec --url 'http://localhost:8000/dist/styleguide/search.html' --size '540x960' --htmlreport 'test/visual/report'",
    "galen:quick": "galen test test/visual/headless.test --htmlreport test/visual/report -DbaseUrl=http://localhost:8000/",
    "postgalen:all": "npm run openreport",
    "test": "npm run serve & npm run galen:quick || true && killall node",
    "test:all": "npm run serve & npm run galen:all || true && killall node",
    "posttest": "npm run openreport",
    "pretest:browserstack": "npm run deploy:surge",
    "test:browserstack": "npm run galen:browserstack",
    "posttest:browserstack": "npm run openreport",
    "openreport": "open test/visual/report/report.html",
    "serve": "http-server -p 8000 dist/"
  },
  "devDependencies": {
    "galenframework-cli": "^2.2.5",
    "gulp": "^3.9.1",
    "gulp-connect": "^4.0.0",
    "gulp-galen": "^1.1.1",
    "gulp-surge": "^0.1.0",
    "http-server": "^0.9.0",
    "lodash.defaultsdeep": "^4.3.5",
    "surge": "^0.18.0"
  }
}
